<section class="banner-area organic-breadcrumb">
	<div class="container">
		<div class="breadcrumb-banner d-flex flex-wrap align-items-center justify-content-end">
			<div class="col-first">
				<h1>Thông tin tài khoản</h1>
			</div>
		</div>
	</div>
</section>
<!-- LOCAL INFORMATION -->

<div class="container">
	<div class="row">
		<div class="col-sm-6 col-sm-offset-3 ">
			<div class="well">
				<h3><span class="fa fa-user"></span>Tài khoản</h3>
				<p>
					{{#with user}}
					<strong>Id</strong>: {{_id}}<br>
					<strong>Email</strong>: {{email }}<br>
					<strong>Họ</strong>: {{firstName }}<br>
					<strong>Tên đệm và tên</strong>: {{lastName }}<br>
					<strong>Số điện thoại</strong>: {{tel}}<br>
					<strong>Địa chỉ</strong>: {{address.0.street}}, {{address.0.ward}},
					{{address.0.district}}, {{address.0.city}}<br>
					<strong>Chức vụ</strong>: {{role}}
					{{/with}}
				</p>

			</div>
		</div>
	</div>
</div>